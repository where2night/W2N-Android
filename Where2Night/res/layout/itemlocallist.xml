<?xml version="1.0" encoding="utf-8"?>
<es.where2night.utilities.NowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/nowCardStyleLocals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/LocalPicture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_launcher"
            android:cropToPadding="true"
            android:scaleType="center" />

        <TextView
            android:id="@+id/txtLocalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/LocalPicture"
            android:text="Local Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</es.where2night.utilities.NowLayout>