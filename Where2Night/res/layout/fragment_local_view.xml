<com.where2night.utilities.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            >
		
            
        <ImageView
            android:id="@+id/imgLocal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/txtLocalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orange Cafe" />
        
        <TextView
            android:id="@+id/txtLocalHorary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abierto de 00:00 a 06:00" />
        
        <TextView
            android:id="@+id/txtLocalFollowers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÂº Seguidores: 123" />
		
		<View
		    android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:background="#000" />
        
        
           
        </LinearLayout>

       
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" 
                android:id="@+id/sticky"
                android:background="#555"
                android:layout_margin="0dp"
                android:padding="0dp"
                style="@android:style/ButtonBar"
            >

            <Button
                android:id="@+id/btnLocalMap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textSize="12sp"
                style="@android:style/ButtonBar"
                android:text="@string/btn_local_map" />
            <Button
                android:id="@+id/btnLocalEvents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:textSize="12sp"
				style="@android:style/ButtonBar"
                android:text="@string/btn_local_events" />
            <Button
                android:id="@+id/btnLocalLists"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                style="@android:style/ButtonBar"
                android:text="@string/btn_local_lists" />
			<Button
                android:id="@+id/btnLocalAttendees"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:textSize="12sp"
                style="@android:style/ButtonBar"
                android:text="@string/btn_local_attendees" />   
            <Button
                android:id="@+id/btnLocalJukebox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                style="@android:style/ButtonBar"
                android:text="@string/btn_local_jukebox" />  
                
           

        </LinearLayout>
       
        
        
    </FrameLayout>

</com.where2night.utilities.ObservableScrollView>