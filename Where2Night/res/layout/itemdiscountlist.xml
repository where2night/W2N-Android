<?xml version="1.0" encoding="utf-8"?>
<es.where2night.utilities.NowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/black"
    android:orientation="vertical">

	<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        style="@style/nowCardStyleLocals" >
	
	    <TextView
	        android:id="@+id/txtTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:text="Titulo"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/txtDescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:paddingRight="5dp"
	        android:layout_below="@+id/txtTitle"
	        android:text="Descripcion"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/txtDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txtDescription"
	        android:text="Fecha" />
	    
	     <TextView
	        android:id="@+id/txtHour"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txtDescription"
	        android:layout_toRightOf="@+id/txtDate"
	        android:layout_marginLeft="10dp"
	        android:text="00:00 - 02:00" />
	
	    <TextView
	        android:id="@+id/txtSignEnd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/txtHour"
	        android:layout_marginTop="5dp"
	        android:text="Te puedes apuntar hasta: " />
	    
	    <TextView
	        android:id="@+id/txtExpireDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/txtSignEnd"
	        android:layout_alignBottom="@+id/txtSignEnd"
	        android:layout_marginLeft="17dp"
	        android:layout_toRightOf="@+id/txtSignEnd"
	        android:text="TextView" />

	   
	
	    <Button
	        android:id="@+id/btnSignMeIn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/txtSignEnd"
	        android:background="@drawable/button_style"
	        android:layout_marginTop="5dp"
	        android:padding="3dp"
	        android:text="Apuntame!" />

	     <TextView
	         android:id="@+id/txtInvited"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignBaseline="@+id/btnSignMeIn"
	         android:layout_alignBottom="@+id/btnSignMeIn"
	         android:layout_toRightOf="@+id/btnSignMeIn"
	         android:text=" + " />
	     
	      <Spinner
	        android:id="@+id/spinnerInvited"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/btnSignMeIn"
	        android:layout_alignBottom="@+id/btnSignMeIn"
	        android:layout_toRightOf="@+id/txtInvited" />
	
	</RelativeLayout>

</es.where2night.utilities.NowLayout>