<es.where2night.utilities.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgLocal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txtLocalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orange Cafe" />

            <TextView
                android:id="@+id/txtLocalHorary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abierto de 00:00 a 06:00" />

            <TextView
                android:id="@+id/txtLocalFollowers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NÂº Seguidores: 123" />

            <View
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000" />

              <FrameLayout
                android:id="@+id/selectedTabFragment"
                android:layout_width="match_parent"
                android:layout_height="900dp"  /> 
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sticky"
            style="@android:style/ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:background="#555"
            android:orientation="horizontal"
            android:padding="0dp" >

            <Button
                android:id="@+id/btnLocalMap"
                style="@android:style/ButtonBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/activo"
                android:padding="0dp"
                android:text="@string/btn_local_map"
                android:textColor="#ffa500"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLocalEvents"
                style="@android:style/ButtonBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/no_activo"
                android:text="@string/btn_local_events"
                android:textColor="#ffa500"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLocalLists"
                style="@android:style/ButtonBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/no_activo"
                android:text="@string/btn_local_lists"
                android:textColor="#ffa500"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLocalAttendees"
                style="@android:style/ButtonBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:background="@drawable/no_activo"
                android:text="@string/btn_local_attendees"
                android:textColor="#ffa500"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLocalJukebox"
                style="@android:style/ButtonBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/no_activo"
                android:text="@string/btn_local_jukebox"
                android:textColor="#ffa500"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>

</es.where2night.utilities.ObservableScrollView>